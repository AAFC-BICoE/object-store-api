<?xml version="1.1" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd"
                   objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="22-Add_derivative_entity" context="schema-change" author="KeyukJ">
        <createTable tableName="derivative">
            <column autoIncrement="true" name="id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_derivative_id"/>
            </column>
            <column name="uuid" type="uuid">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="file_identifier" type="uuid">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="file_extension" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="bucket" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="dc_type" type="dctype">
                <constraints nullable="false"/>
            </column>
            <column name="ac_hash_function" type="VARCHAR(50)"/>
            <column name="ac_hash_value" type="VARCHAR(128)"/>
            <column name="created_on" type="timestamptz" defaultValueComputed="current_timestamp"/>
            <column name="created_by" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>
            <column name="object_subtype" type="INTEGER"/>
            <column name="ac_derived_from" type="INTEGER"/>
        </createTable>

        <addForeignKeyConstraint
                baseColumnNames="object_subtype"
                baseTableName="derivative"
                constraintName="fk_derivative_object_subtype"
                referencedColumnNames="id"
                referencedTableName="object_subtype"/>
        <addForeignKeyConstraint
                baseColumnNames="ac_derived_from"
                baseTableName="derivative"
                constraintName="fk_derivative_ac_derived_from"
                referencedColumnNames="id"
                referencedTableName="metadata"/>
    </changeSet>

</databaseChangeLog>
