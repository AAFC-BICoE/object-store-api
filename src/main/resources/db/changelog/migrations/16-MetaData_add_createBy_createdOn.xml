<?xml version="1.1" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd"
                   objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="16-MetaData_add_createBy_createdOn" context="schema-change" author="KeyukJ">

        <!-- Rename created_date to created_on -->
        <renameColumn tableName="metadata"
                      newColumnName="created_on"
                      oldColumnName="created_date"/>

        <!-- Add created by column -->
        <addColumn tableName="metadata">
            <column name="created_by" type="VARCHAR(250)"/>
        </addColumn>

        <!-- Add value for created_on field to existing records-->
        <update tableName="metadata">
            <column name="created_by" value="user"/>
        </update>

        <!--Add not null constraint to created_by column-->
        <addNotNullConstraint tableName="metadata" columnName="created_by"/>

    </changeSet>

</databaseChangeLog>