<?xml version="1.1" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd"
                   objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="17-MetaManagedAttrib_add_createdBy_createdOn" context="schema-change" author="KeyukJ">

        <!-- Add created On column -->
        <addColumn tableName="metadata_managed_attribute">
            <column name="created_on" type="timestamptz" defaultValueComputed="current_timestamp"/>
        </addColumn>

        <!-- Add created by column -->
        <addColumn tableName="metadata_managed_attribute">
            <column name="created_by" type="VARCHAR(250)"/>
        </addColumn>

        <!-- Add value for created_on field to existing records-->
        <update tableName="metadata_managed_attribute">
            <column name="created_by" value="user"/>
        </update>

        <!--Add not null constraint to created_by column-->
        <addNotNullConstraint tableName="metadata_managed_attribute" columnName="created_by"/>

    </changeSet>

</databaseChangeLog>